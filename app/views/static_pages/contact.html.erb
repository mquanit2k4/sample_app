<% provide(:title, t("contact.title")) %>
<div class="center jumbotron">
  <h1><%= t("contact.heading") %></h1>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h3><%= t("contact.get_in_touch") %></h3>
        </div>
        <div class="card-body">
          <div class="contact-info">
            <h4><%= t("contact.info.title") %></h4>
            <p><strong><%= t("contact.info.email") %>:</strong> minhquan10012004@gmail.com</p>
            <p><strong><%= t("contact.info.phone") %>:</strong> +84 123 4567 897</p>
            <p><strong><%= t("contact.info.address") %>:</strong></p>
            <address>
              198 Xa Dan<br>
              Phuong Lien, Dong Da<br>
              Ha Noi, Viet Nam
            </address>
          </div>

          <hr>

          <div class="contact-form">
            <h4><%= t("contact.form.title") %></h4>
            <%= form_with(local: true, class: "contact-form") do |form| %>
              <div class="form-group">
                <%= form.label :name, t("contact.form.name") %>
                <%= form.text_field :name, class: "form-control", placeholder: t("contact.form.name_placeholder") %>
              </div>

              <div class="form-group">
                <%= form.label :email, t("contact.form.email") %>
                <%= form.email_field :email, class: "form-control", placeholder: t("contact.form.email_placeholder") %>
              </div>

              <div class="form-group">
                <%= form.label :subject, t("contact.form.subject") %>
                <%= form.text_field :subject, class: "form-control", placeholder: t("contact.form.subject_placeholder") %>
              </div>

              <div class="form-group">
                <%= form.label :message, t("contact.form.message") %>
                <%= form.text_area :message, rows: 5, class: "form-control", placeholder: t("contact.form.message_placeholder") %>
              </div>

              <div class="form-group">
                <%= form.submit t("contact.form.send"), class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <p><%= t("contact.description") %></p>
    <%= link_to t("nav.home"), root_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
