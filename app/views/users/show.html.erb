<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <div class="user-timestamps mt-3">
        <p>
          <strong><%= t "new_user.history.updated_at" %></strong>
          <%= @user.created_at.strftime(Settings.time_format.user_history) %>
        </p>

        <p>
          <strong><%= t "new_user.history.created_at" %></strong>
          <%= @user.updated_at.strftime(Settings.time_format.user_history) %>
        </p>
      </div>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3><%= t(".microposts") %> (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav(@page) %>
    <% end %>
  </div>
</div>
